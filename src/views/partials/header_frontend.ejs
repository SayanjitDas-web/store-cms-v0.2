<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StoreCMS Shop</title>
    <link href="/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <%- typeof headContent !=='undefined' ? headContent : '' %>
</head>

<body class="flex flex-col min-h-screen bg-gray-50">
    <%- typeof headerContent !=='undefined' ? headerContent : '' %>
        <nav class="bg-white shadow">
            <div class="container mx-auto px-6 py-3 md:flex md:justify-between md:items-center">
                <div class="flex justify-between items-center">
                    <div>
                        <a class="text-gray-800 text-xl font-bold md:text-2xl hover:text-gray-700 block" href="/">
                            <% if (typeof logo !=='undefined' && logo.type==='image' ) { %>
                                <img src="<%= logo.content %>" alt="Logo" class="h-8 md:h-10 w-auto object-contain">
                                <% } else { %>
                                    <%= (typeof logo !=='undefined' ) ? logo.content : 'StoreCMS' %>
                                        <% } %>
                        </a>
                    </div>

                    <!-- Mobile menu button -->
                    <div class="flex md:hidden">
                        <button type="button"
                            class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600"
                            aria-label="toggle menu"
                            onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
                            <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
                                <path fill-rule="evenodd"
                                    d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z">
                                </path>
                            </svg>
                        </button>
                    </div>
                </div>

                <div id="mobile-menu" class="md:flex items-center hidden">
                    <div class="flex flex-col md:flex-row md:mx-6 items-center">
                        <% if (typeof navLinks !=='undefined' ) { %>
                            <% navLinks.forEach(link=> { %>
                                <% const isActive=(typeof currentPath !=='undefined' && currentPath===link.url); %>
                                    <a class="my-1 text-sm font-medium transition-all duration-200 md:mx-5 md:my-0 flex items-center py-1 <%= isActive ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-indigo-500' %>"
                                        href="<%= link.url %>" <%=link.target ? `target="${link.target}" ` : '' %>>
                                        <% if (link.title.toLowerCase()==='cart' ) { %>
                                            <i class="bi bi-cart mr-1"></i>
                                            <% } %>
                                                <%= link.title %>
                                                    <% if (link.title.toLowerCase()==='cart' && typeof cart
                                                        !=='undefined' && cart.items.length> 0) { %>
                                                        <span
                                                            class="ml-2 bg-indigo-600 text-white rounded-full px-2 py-0.5 text-xs font-bold shadow-sm">
                                                            <%= cart.items.reduce((a, b)=> a + b.quantity, 0) %>
                                                        </span>
                                                        <% } %>
                                    </a>
                                    <% }); %>
                                        <% } else { %>
                                            <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0"
                                                href="/">Home</a>
                                            <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0"
                                                href="/shop">Shop</a>
                                            <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0 flex items-center"
                                                href="/cart">
                                                <i class="bi bi-cart mr-1"></i> Cart
                                            </a>
                                            <% } %>



                                                <div class="h-6 w-px bg-gray-200 mx-4 hidden md:block"></div>

                                                <% if(typeof user !=='undefined' && user) { %>
                                                    <% if(user.role==='admin' ) { %>
                                                        <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0"
                                                            href="/admin/dashboard">Dashboard</a>
                                                        <% } else { %>
                                                            <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0"
                                                                href="/my-orders">My Orders</a>
                                                            <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0"
                                                                href="/customer/profile">My Account</a>
                                                            <% } %>

                                                                <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0"
                                                                    href="/api/auth/logout">Logout</a>
                                                                <% } else { %>
                                                                    <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0"
                                                                        href="/customer/login">Login</a>
                                                                    <a class="my-1 text-sm text-gray-600 font-medium hover:text-indigo-500 md:mx-5 md:my-0"
                                                                        href="/customer/signup">Signup</a>
                                                                    <% } %>
                    </div>
                </div>
            </div>
        </nav>