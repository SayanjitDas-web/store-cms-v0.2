<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - StoreCMS</title>
    <link href="/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body class="bg-gray-100">

    <header class="bg-gray-900 text-white shadow fixed w-full z-50 top-0">
        <div class="flex items-center justify-between px-6 py-3">
            <a class="text-xl font-bold" href="#">StoreCMS</a>

            <button class="md:hidden text-white focus:outline-none" type="button"
                onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
                <span class="bi bi-list text-2xl"></span>
            </button>

            <div class="hidden md:block">
                <a class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" href="#"
                    id="logoutBtnHeader">Logout</a>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div class="md:hidden hidden bg-gray-800" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <!-- Mobile menu items would go here, reusing logic -->
                <a href="#"
                    class="block px-3 py-2 rounded-md text-base font-medium text-white bg-gray-900">Dashboard</a>
                <a href="#" id="logoutBtnMobile"
                    class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700">Logout</a>
            </div>
        </div>
    </header>

    <div class="flex h-screen pt-16">
        <!-- Sidebar -->
        <nav class="w-64 bg-white shadow-md hidden md:block h-full fixed top-16 left-0 overflow-y-auto">
            <div class="py-4">
                <ul class="space-y-1">
                    <% if (typeof adminMenu !=='undefined' ) { %>
                        <% adminMenu.forEach(item=> { %>
                            <li>
                                <a href="<%= item.link %>"
                                    class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-100 transition-colors duration-200 <%= (typeof currentPath !== 'undefined' && currentPath.startsWith(item.link)) ? 'bg-gray-100 border-r-4 border-blue-500 font-medium' : '' %>">
                                    <% if(item.icon) { %><i class="bi <%= item.icon %> mr-3 text-lg"></i>
                                        <% } %>
                                            <%= item.title %>
                                </a>
                            </li>
                            <% }); %>
                                <% } else { %>
                                    <li>
                                        <a href="/admin/dashboard"
                                            class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-100">
                                            <i class="bi bi-speedometer2 mr-3"></i> Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/admin/media"
                                            class="flex items-center px-6 py-3 text-gray-700 hover:bg-gray-100">
                                            <i class="bi bi-images mr-3"></i> Media
                                        </a>
                                    </li>
                                    <% } %>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="flex-1 md:ml-64 p-8 overflow-y-auto h-full">