<%- include('../../partials/header') %>

    <div class="flex justify-between items-center pb-6 mb-6 border-b border-gray-200">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Media Library</h1>
            <p class="text-gray-500 mt-1">Manage your images and assets</p>
        </div>
        <button onclick="openModal()"
            class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2.5 px-5 rounded-lg shadow-sm inline-flex items-center transition-all duration-200 transform hover:scale-105">
            <i class="bi bi-cloud-upload mr-2 text-lg"></i> Upload Media
        </button>
    </div>

    <!-- Media Grid -->
    <div id="mediaGrid" class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6">
        <!-- Items will be loaded here via AJAX -->
    </div>

    <!-- Empty State (Hidden by default) -->
    <div id="emptyState" class="hidden text-center py-20">
        <div class="bg-gray-100 rounded-full h-24 w-24 flex items-center justify-center mx-auto mb-4">
            <i class="bi bi-images text-4xl text-gray-400"></i>
        </div>
        <h3 class="text-lg font-medium text-gray-900">No media files found</h3>
        <p class="text-gray-500 mt-1">Upload files to get started.</p>
    </div>

    <!-- Pagination / Load More -->
    <div class="text-center mt-10 mb-10">
        <button id="loadMoreBtn"
            class="text-indigo-600 hover:text-indigo-800 font-medium hidden px-6 py-2 border border-indigo-200 rounded-full hover:bg-indigo-50 transition-colors">
            Load More Files
        </button>
    </div>

    <!-- Upload Modal -->
    <div id="uploadModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog"
        aria-modal="true">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity backdrop-blur-sm" onclick="closeModal()">
        </div>

        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

            <div
                class="inline-block align-bottom bg-white rounded-xl text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div
                            class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-indigo-100 sm:mx-0 sm:h-10 sm:w-10">
                            <i class="bi bi-cloud-upload text-indigo-600 text-lg"></i>
                        </div>
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Upload Media</h3>
                            <div class="mt-2">
                                <p class="text-sm text-gray-500 mb-4">Select an image file to upload to your library.
                                </p>

                                <label class="block w-full cursor-pointer">
                                    <span class="sr-only">Choose file</span>
                                    <input type="file" id="mediaInput" class="block w-full text-sm text-gray-500
                                    file:mr-4 file:py-2.5 file:px-4
                                    file:rounded-full file:border-0
                                    file:text-sm file:font-semibold
                                    file:bg-indigo-50 file:text-indigo-700
                                    hover:file:bg-indigo-100
                                    transition-colors
                                " />
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button id="uploadBtn" type="button"
                        class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm disabled:opacity-50 disabled:cursor-not-allowed">
                        Upload
                    </button>
                    <button onclick="closeModal()" type="button"
                        class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="fixed bottom-5 right-5 transform translate-y-20 opacity-0 transition-all duration-300 z-50">
        <div class="bg-gray-800 text-white px-4 py-3 rounded-lg shadow-lg flex items-center">
            <i class="bi bi-check-circle-fill text-green-400 mr-2"></i>
            <span id="toastMsg">Action Successful</span>
        </div>
    </div>

    <script>
        let skip = 0;
        const limit = 24;
        const grid = document.getElementById('mediaGrid');
        const loadMoreBtn = document.getElementById('loadMoreBtn');
        const emptyState = document.getElementById('emptyState');

        // Modal Logic
        function openModal() {
            document.getElementById('uploadModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('uploadModal').classList.add('hidden');
            document.getElementById('mediaInput').value = '';
        }

        // Toast Logic
        function showToast(msg) {
            const toast = document.getElementById('toast');
            document.getElementById('toastMsg').textContent = msg;
            toast.classList.remove('translate-y-20', 'opacity-0');
            setTimeout(() => {
                toast.classList.add('translate-y-20', 'opacity-0');
            }, 3000);
        }

        // Load Media
        async function loadMedia(reset = false) {
            if (reset) {
                skip = 0;
                grid.innerHTML = '';
                emptyState.classList.add('hidden');
            }

            loadMoreBtn.innerHTML = '<span class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-indigo-600"></span> Loading...';

            try {
                const res = await fetch(`/admin/media/api/list?limit=${limit}&skip=${skip}`);
                const data = await res.json();

                if (data.files.length > 0) {
                    data.files.forEach(file => {
                        const div = document.createElement('div');
                        div.className = 'group relative aspect-square bg-gray-100 rounded-xl overflow-hidden shadow-sm border border-gray-200 hover:shadow-md transition-shadow';
                        div.innerHTML = `
                        <img src="${file.thumbnail}" class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500" alt="${file.name}">
                        
                        <!-- Overlay -->
                        <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-all duration-300 flex flex-col justify-end p-3 opacity-0 group-hover:opacity-100">
                             <div class="flex justify-center space-x-2 mb-auto mt-auto transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                                <button onclick="copyToClipboard('${file.url}')" class="bg-white text-gray-800 p-2 rounded-full hover:bg-gray-100 shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" title="Copy URL">
                                    <i class="bi bi-link-45deg text-lg"></i>
                                </button>
                                <button onclick="deleteMedia('${file.id}', this)" class="bg-white text-red-600 p-2 rounded-full hover:bg-red-50 shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" title="Delete">
                                    <i class="bi bi-trash text-lg"></i>
                                </button>
                            </div>
                            <p class="text-xs text-white truncate text-center font-medium drop-shadow-md">${file.name}</p>
                        </div>
                    `;
                        grid.appendChild(div);
                    });
                    skip += limit;

                    if (data.files.length < limit) {
                        loadMoreBtn.classList.add('hidden');
                    } else {
                        loadMoreBtn.classList.remove('hidden');
                        loadMoreBtn.textContent = 'Load More Files';
                    }
                } else {
                    loadMoreBtn.classList.add('hidden');
                    if (skip === 0) {
                        emptyState.classList.remove('hidden');
                    }
                }
            } catch (err) {
                console.error(err);
                loadMoreBtn.textContent = 'Error loading files';
            }
        }

        // Upload Media
        document.getElementById('uploadBtn').addEventListener('click', async () => {
            const input = document.getElementById('mediaInput');
            if (!input.files[0]) return alert('Please select a file');

            const formData = new FormData();
            formData.append('image', input.files[0]);

            const btn = document.getElementById('uploadBtn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<span class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></span> Uploading...';
            btn.disabled = true;

            try {
                const res = await fetch('/admin/media/api/upload', {
                    method: 'POST',
                    body: formData
                });
                const data = await res.json();

                if (data.url) {
                    closeModal();
                    showToast('Image uploaded successfully!');
                    loadMedia(true); // reload grid
                } else {
                    alert('Upload failed: ' + (data.error || 'Unknown error'));
                }
            } catch (err) {
                alert('Error updating file');
            } finally {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });

        // Delete Media
        async function deleteMedia(id, btnElement) {
            if (!confirm('Are you sure you want to delete this file?\nThis action cannot be undone.')) return;

            // Visual feedback
            const container = btnElement.closest('div.group');
            container.style.opacity = '0.5';

            try {
                const res = await fetch('/admin/media/api/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id })
                });
                const data = await res.json();

                if (data.success) {
                    showToast('File deleted successfully');
                    container.classList.add('scale-0');
                    setTimeout(() => container.remove(), 200);
                } else {
                    container.style.opacity = '1';
                    alert('Delete failed: ' + data.error);
                }
            } catch (err) {
                container.style.opacity = '1';
                alert('Error deleting file');
            }
        }

        // Utility
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text);
            showToast('URL copied to clipboard!');
        }

        // Load More Action
        document.getElementById('loadMoreBtn').addEventListener('click', () => loadMedia(false));

        // Initial Load
        loadMedia(true);
    </script>

    <%- include('../../partials/footer') %>