<%- include('../partials/header_frontend') %>

    <div class="container mx-auto px-6 py-8 flex-grow">
        <% if (page.showTitle !==false) { %>
            <div class="mb-6">
                <h1 class="text-3xl font-bold text-gray-800">
                    <%= page.title %>
                </h1>
            </div>
            <% } %>

                <% if (page.featuredImage && page.showFeaturedImage !==false) { %>
                    <div class="mb-8">
                        <img src="<%= page.featuredImage %>" alt="<%= page.title %>"
                            class="w-full h-64 md:h-96 object-cover rounded-lg shadow-md">
                    </div>
                    <% } %>
                        <div class="prose max-w-none text-gray-600">
                            <%- page.content %>
                        </div>
    </div>

    <%- include('../partials/footer_frontend') %>