<%- include('../../../../src/views/partials/header') %>

    <div class="mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-800">Navigation Manager</h1>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Existing Links (Left) -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h3 class="font-bold text-gray-700 uppercase text-xs tracking-wider">Active Navigation Links</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Order
                                </th>
                                <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Title
                                </th>
                                <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">URL
                                </th>
                                <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                                    Target</th>
                                <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                                    Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            <% if (navItems.length===0) { %>
                                <tr>
                                    <td colspan="5" class="px-6 py-10 text-center text-gray-400 italic">No navigation
                                        items found. Add one to get started!</td>
                                </tr>
                                <% } %>
                                    <% navItems.forEach(item=> { %>
                                        <tr class="hover:bg-gray-50 transition-colors group">
                                            <td class="px-6 py-4 text-sm text-gray-500">
                                                <%= item.order %>
                                            </td>
                                            <td class="px-6 py-4 font-semibold text-gray-900">
                                                <%= item.title %>
                                            </td>
                                            <td class="px-6 py-4 text-sm text-gray-500 font-mono">
                                                <%= item.url %>
                                            </td>
                                            <td class="px-6 py-4">
                                                <span
                                                    class="px-2 py-1 text-xs font-medium rounded-full <%= item.target === '_blank' ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-600' %>">
                                                    <%= item.target==='_blank' ? 'New Tab' : 'Same Tab' %>
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 flex space-x-2">
                                                <button
                                                    onclick="editModal('<%= item._id %>', '<%= item.title %>', '<%= item.url %>', '<%= item.order %>', '<%= item.target %>')"
                                                    class="text-indigo-600 hover:text-indigo-900 p-1.5 rounded-lg hover:bg-indigo-50 transition-colors">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                <form action="/admin/navigation/delete/<%= item._id %>" method="POST"
                                                    onsubmit="return confirm('Remove this link?')" class="inline">
                                                    <button type="submit"
                                                        class="text-red-600 hover:text-red-900 p-1.5 rounded-lg hover:bg-red-50 transition-colors">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <!-- Logo Settings Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h3 class="font-bold text-gray-700 uppercase text-xs tracking-wider">Logo Settings</h3>
                </div>
                <form action="/admin/navigation/settings" method="POST" class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Logo Type</label>
                        <div class="flex space-x-4">
                            <label class="flex items-center">
                                <input type="radio" name="logoType" value="text"
                                    class="text-indigo-600 focus:ring-indigo-500" <%=(typeof logo !=='undefined' &&
                                    logo.type==='text' ) ? 'checked' : '' %>
                                onchange="toggleLogoInput('text')">
                                <span class="ml-2 text-sm text-gray-600">Text</span>
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="logoType" value="image"
                                    class="text-indigo-600 focus:ring-indigo-500" <%=(typeof logo !=='undefined' &&
                                    logo.type==='image' ) ? 'checked' : '' %>
                                onchange="toggleLogoInput('image')">
                                <span class="ml-2 text-sm text-gray-600">Image</span>
                            </label>
                        </div>
                    </div>

                    <div id="logo-text-input"
                        class="<%= (typeof logo !== 'undefined' && logo.type === 'image') ? 'hidden' : '' %>">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Store Name / Logo Text</label>
                        <input type="text" name="logoContent"
                            value="<%= (typeof logo !== 'undefined' && logo.type === 'text') ? logo.content : 'StoreCMS' %>"
                            class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    </div>

                    <div id="logo-image-input"
                        class="<%= (typeof logo !== 'undefined' && logo.type === 'text') ? 'hidden' : '' %>">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Logo Image URL</label>
                        <div class="flex space-x-2">
                            <input type="text" id="logoUrl" name="logoContentImage"
                                value="<%= (typeof logo !== 'undefined' && logo.type === 'image') ? logo.content : '' %>"
                                class="flex-1 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                                placeholder="https://...">
                            <button type="button" onclick="openLogoPicker()"
                                class="px-3 py-2 bg-gray-100 text-gray-700 rounded-lg border border-gray-300 hover:bg-gray-200 transition-colors">
                                <i class="bi bi-image"></i>
                            </button>
                        </div>
                        <div id="logo-preview"
                            class="mt-4 p-2 border rounded-lg bg-gray-50 flex items-center justify-center min-h-[100px]">
                            <% if (typeof logo !=='undefined' && logo.type==='image' && logo.content) { %>
                                <img src="<%= logo.content %>" class="max-h-16 object-contain">
                                <% } else { %>
                                    <p class="text-xs text-gray-400 italic">No image selected</p>
                                    <% } %>
                        </div>
                    </div>

                    <button type="submit"
                        class="w-full py-2 bg-gray-900 text-white rounded-lg font-bold hover:bg-gray-800 transition-colors">
                        Save Logo Settings
                    </button>
                </form>
            </div>

            <!-- Add Link (Right) -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h3 id="formTitle" class="font-bold text-gray-700 uppercase text-xs tracking-wider text-indigo-600">
                        Add New Navigation Link</h3>
                </div>
                <form id="navForm" action="/admin/navigation" method="POST" class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Link Title</label>
                        <input type="text" name="title" required placeholder="e.g. Products"
                            class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">URL / Path</label>
                        <input type="text" name="url" required placeholder="e.g. /shop or https://..."
                            class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
                            <input type="number" name="order" value="0"
                                class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Target</label>
                            <select name="target"
                                class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                                <option value="_self">Same Tab</option>
                                <option value="_blank">New Tab</option>
                            </select>
                        </div>
                    </div>
                    <div class="pt-4 flex flex-col space-y-2">
                        <button type="submit" id="submitBtn"
                            class="w-full inline-flex justify-center py-2.5 px-4 border border-transparent shadow-sm text-sm font-bold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition-colors">
                            Add to Menu
                        </button>
                        <button type="button" id="cancelBtn" onclick="resetForm()"
                            class="hidden w-full inline-flex justify-center py-2 px-4 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                            Cancel Edit
                        </button>
                    </div>
                </form>
            </div>

            <!-- Available Pages (Right) -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h3 class="font-bold text-gray-700 uppercase text-xs tracking-wider">Available Pages</h3>
                </div>
                <div class="p-2 max-h-[400px] overflow-y-auto">
                    <% if(pages.length===0) { %>
                        <p class="p-4 text-sm text-gray-400 italic">No published pages found.</p>
                        <% } %>
                            <div class="grid grid-cols-1 gap-1">
                                <% pages.forEach(page=> { %>
                                    <div
                                        class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg transition-colors group">
                                        <div class="truncate mr-2">
                                            <h4 class="text-sm font-semibold text-gray-900 truncate">
                                                <%= page.title %>
                                            </h4>
                                            <p class="text-xs text-gray-500 truncate">/<%= page.slug %>
                                            </p>
                                        </div>
                                        <button onclick="quickAdd('<%= page.title %>', '/<%= page.slug %>')"
                                            class="flex-shrink-0 p-1 px-3 text-xs bg-indigo-50 text-indigo-600 rounded-md border border-indigo-100 opacity-0 group-hover:opacity-100 transition-opacity hover:bg-indigo-600 hover:text-white">
                                            Add Link
                                        </button>
                                    </div>
                                    <% }) %>

                                        <!-- Special Shop/Cart Quick Adds -->
                                        <div class="border-t border-gray-100 my-1 pt-1"></div>
                                        <div
                                            class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg transition-colors group">
                                            <div>
                                                <h4 class="text-sm font-semibold text-gray-900">Main Shop</h4>
                                                <p class="text-xs text-gray-500">/shop</p>
                                            </div>
                                            <button onclick="quickAdd('Shop', '/shop')"
                                                class="flex-shrink-0 p-1 px-3 text-xs bg-indigo-50 text-indigo-600 rounded-md border border-indigo-100 opacity-0 group-hover:opacity-100 transition-opacity hover:bg-indigo-600 hover:text-white">
                                                Add Link
                                            </button>
                                        </div>
                            </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleLogoInput(type) {
            const textInput = document.getElementById('logo-text-input');
            const imageInput = document.getElementById('logo-image-input');
            if (type === 'text') {
                textInput.classList.remove('hidden');
                imageInput.classList.add('hidden');
            } else {
                textInput.classList.add('hidden');
                imageInput.classList.remove('hidden');
            }
        }

        function openLogoPicker() {
            if (window.dashboardAPI && window.dashboardAPI.openMediaPicker) {
                window.dashboardAPI.openMediaPicker({
                    onSelect: (url) => {
                        document.getElementById('logoUrl').value = url;
                        const preview = document.getElementById('logo-preview');
                        preview.innerHTML = `<img src="${url}" class="max-h-16 object-contain">`;
                    }
                });
            } else {
                alert('Media Picker not available. Please enter the URL manually.');
            }
        }

        function quickAdd(title, url) {
            resetForm();
            const form = document.getElementById('navForm');
            form.querySelector('[name="title"]').value = title;
            form.querySelector('[name="url"]').value = url;

            // Flash the inputs to show they changed
            const inputs = form.querySelectorAll('input');
            inputs.forEach(input => {
                input.classList.add('ring-2', 'ring-indigo-500');
                setTimeout(() => input.classList.remove('ring-2', 'ring-indigo-500'), 1000);
            });
        }

        function editModal(id, title, url, order, target) {
            const form = document.getElementById('navForm');
            const titleInput = form.querySelector('[name="title"]');
            const urlInput = form.querySelector('[name="url"]');
            const orderInput = form.querySelector('[name="order"]');
            const targetInput = form.querySelector('[name="target"]');
            const formTitle = document.getElementById('formTitle');
            const submitBtn = document.getElementById('submitBtn');
            const cancelBtn = document.getElementById('cancelBtn');

            form.action = `/admin/navigation/edit/${id}`;
            titleInput.value = title;
            urlInput.value = url;
            orderInput.value = order;
            targetInput.value = target;

            formTitle.innerText = 'Edit Navigation Link';
            formTitle.classList.remove('text-indigo-600');
            formTitle.classList.add('text-orange-600');
            submitBtn.innerText = 'Save Changes';
            submitBtn.classList.remove('bg-indigo-600', 'hover:bg-indigo-700');
            submitBtn.classList.add('bg-orange-600', 'hover:bg-orange-700');
            cancelBtn.classList.remove('hidden');

            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function resetForm() {
            const form = document.getElementById('navForm');
            const formTitle = document.getElementById('formTitle');
            const submitBtn = document.getElementById('submitBtn');
            const cancelBtn = document.getElementById('cancelBtn');

            form.reset();
            form.action = '/admin/navigation';
            formTitle.innerText = 'Add New Navigation Link';
            formTitle.classList.add('text-indigo-600');
            formTitle.classList.remove('text-orange-600');
            submitBtn.innerText = 'Add to Menu';
            submitBtn.classList.add('bg-indigo-600', 'hover:bg-indigo-700');
            submitBtn.classList.remove('bg-orange-600', 'hover:bg-orange-700');
            cancelBtn.classList.add('hidden');
        }
    </script>

    <%- include('../../../../src/views/partials/footer') %>
