<%- include('../../../src/views/partials/header') %>

    <div class="flex-1 overflow-auto focus:outline-none bg-gray-50">
        <main class="flex-1 relative pb-8 z-0 overflow-y-auto">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 mt-10">

                <!-- Header -->
                <div class="md:flex md:items-center md:justify-between mb-8">
                    <div class="flex-1 min-w-0">
                        <h2
                            class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate flex items-center">
                            <i class="bi bi-credit-card-2-front text-indigo-600 mr-3"></i>
                            Razorpay Settings
                        </h2>
                        <p class="mt-1 text-sm text-gray-500">
                            Configure your Razorpay payment gateway credentials to accept payments.
                        </p>
                    </div>
                </div>

                <% if (locals.success) { %>
                    <div class="rounded-md bg-green-50 p-4 mb-6 border border-green-200 shadow-sm">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="bi bi-check-circle-fill text-green-400"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-green-800">
                                    <%= success %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <% if (locals.error) { %>
                            <div class="rounded-md bg-red-50 p-4 mb-6 border border-red-200 shadow-sm">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-x-circle-fill text-red-400"></i>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm font-medium text-red-800">
                                            <%= error %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <div class="bg-white shadow-lg overflow-hidden sm:rounded-xl border border-gray-100">
                                    <div class="px-4 py-5 sm:px-6 bg-indigo-50 border-b border-gray-200">
                                        <h3 class="text-lg leading-6 font-medium text-indigo-900">
                                            API Configuration
                                        </h3>
                                        <p class="mt-1 max-w-2xl text-sm text-indigo-500">
                                            Enter your Test or Live keys from the Razorpay Dashboard.
                                        </p>
                                    </div>

                                    <div class="px-4 py-5 sm:p-6">
                                        <form action="/admin/razorpay/settings" method="POST">
                                            <div class="space-y-6">

                                                <div class="bg-yellow-50 p-4 rounded-md border border-yellow-200">
                                                    <div class="flex">
                                                        <div class="flex-shrink-0">
                                                            <i class="bi bi-info-circle text-yellow-400"></i>
                                                        </div>
                                                        <div class="ml-3">
                                                            <h3 class="text-sm font-medium text-yellow-800">Where to
                                                                find keys?</h3>
                                                            <div class="mt-2 text-sm text-yellow-700">
                                                                <p>
                                                                    You can generate your API keys in the
                                                                    <a href="https://dashboard.razorpay.com/app/keys"
                                                                        target="_blank"
                                                                        class="font-medium underline hover:text-yellow-600">
                                                                        Razorpay Dashboard &rarr; Settings &rarr; API
                                                                        Keys
                                                                    </a>.
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div>
                                                    <label for="RAZORPAY_KEY_ID"
                                                        class="block text-sm font-medium text-gray-700 mb-2">
                                                        Key ID <span class="text-red-500">*</span>
                                                    </label>
                                                    <input type="text" name="RAZORPAY_KEY_ID" id="RAZORPAY_KEY_ID"
                                                        value="<%= settings.RAZORPAY_KEY_ID || '' %>"
                                                        class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                                                        placeholder="rzp_test_..." required>
                                                </div>

                                                <div>
                                                    <label for="RAZORPAY_KEY_SECRET"
                                                        class="block text-sm font-medium text-gray-700 mb-2">
                                                        Key Secret <span class="text-red-500">*</span>
                                                    </label>
                                                    <input type="password" name="RAZORPAY_KEY_SECRET"
                                                        id="RAZORPAY_KEY_SECRET"
                                                        value="<%= settings.RAZORPAY_KEY_SECRET || '' %>"
                                                        class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                                                        placeholder="••••••••••••••••" required>
                                                </div>
                                            </div>

                                            <div class="mt-8 border-t border-gray-200 pt-5">
                                                <div class="flex justify-end">
                                                    <button type="button" onclick="window.history.back()"
                                                        class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-3">
                                                        Cancel
                                                    </button>
                                                    <button type="submit"
                                                        class="inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                                        <i class="bi bi-save2 mr-2"></i> Save Configuration
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
            </div>
        </main>
    </div>

    <%- include('../../../src/views/partials/footer') %>