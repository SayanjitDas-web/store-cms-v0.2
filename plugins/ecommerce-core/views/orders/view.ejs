<%- include('../../../../src/views/partials/header') %>

    <div class="flex justify-between items-center pb-4 mb-4 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-800">Order Details #<%= order._id %>
        </h1>
        <a href="/admin/ecommerce/orders" class="text-indigo-600 hover:text-indigo-900">Back to Orders</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <!-- customer info -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">Customer Information</h2>
            <div class="space-y-2">
                <p><span class="font-medium text-gray-600">Name:</span>
                    <%= order.customerInfo.firstName %>
                        <%= order.customerInfo.lastName %>
                </p>
                <p><span class="font-medium text-gray-600">Email:</span>
                    <%= order.customerInfo.email %>
                </p>
                <p><span class="font-medium text-gray-600">Address:</span>
                    <%= order.customerInfo.address %>
                </p>
                <p><span class="font-medium text-gray-600">User Account:</span>
                    <%= order.user ? order.user.username : 'Guest Checkout' %>
                </p>
            </div>
        </div>

        <!-- payment info -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">Payment Details</h2>
            <div class="space-y-2">
                <p><span class="font-medium text-gray-600">Method:</span>
                    <span class="uppercase">
                        <%= order.payment ? order.payment.method : 'COD' %>
                    </span>
                </p>
                <p><span class="font-medium text-gray-600">Status:</span>
                    <span class="capitalize">
                        <%= order.payment ? order.payment.status : 'Pending' %>
                    </span>
                </p>
                <% if(order.payment && order.payment.transactionId) { %>
                    <p><span class="font-medium text-gray-600">Transaction ID:</span>
                        <span class="font-mono text-sm">
                            <%= order.payment.transactionId %>
                        </span>
                    </p>
                    <% } %>
                        <p class="mt-4"><span class="font-medium text-gray-600">Total Amount:</span> <span
                                class="text-xl font-bold text-indigo-600">$<%= order.totalAmount ?
                                    order.totalAmount.toFixed(2) : '0.00' %></span></p>
            </div>
        </div>

        <!-- order status -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">Order Status</h2>
            <div class="space-y-2">
                <p><span class="font-medium text-gray-600">Date:</span>
                    <%= new Date(order.createdAt).toLocaleString() %>
                </p>
                <div class="flex flex-col space-y-4">
                    <div class="flex items-center">
                        <span class="font-medium text-gray-600 mr-2">Current:</span>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= order.status === 'completed' ? 'bg-green-100 text-green-800' : 
                                order.status === 'cancelled' ? 'bg-red-100 text-red-800' :
                                'bg-yellow-100 text-yellow-800' %>">
                            <%= order.status.toUpperCase() %>
                        </span>
                    </div>

                    <form action="/admin/ecommerce/orders/<%= order._id %>/status" method="POST"
                        class="mt-4 pt-4 border-t border-gray-100">
                        <label for="status" class="block text-sm font-medium text-gray-700 mb-2">Update Status</label>
                        <select id="status" name="status"
                            class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 text-sm py-2 mb-2"
                            style="border: 1px solid #d1d5db;">
                            <% ['pending', 'processing' , 'shipped' , 'completed' , 'cancelled' , 'refunded'
                                ].forEach(s=> { %>
                                <option value="<%= s %>" <%=order.status===s ? 'selected' : '' %>><%=
                                        s.charAt(0).toUpperCase() + s.slice(1) %>
                                </option>
                                <% }); %>
                        </select>
                        <input type="text" name="note" placeholder="Add a note (optional)"
                            class="block w-full rounded-md border-gray-300 shadow-sm text-sm py-2 mb-2 px-2"
                            style="border: 1px solid #d1d5db;">
                        <button type="submit"
                            class="w-full bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold py-2 px-4 rounded transition-colors duration-200">
                            Update Status
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- order items -->
    <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-800">Order Items</h2>
        </div>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (order.items && order.items.length> 0) { %>
                    <% order.items.forEach(item=> { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <% if(item.image) { %>
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <img class="h-10 w-10 rounded object-cover" src="<%= item.image %>"
                                                alt="<%= item.name %>">
                                        </div>
                                        <% } %>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900">
                                                    <%= item.name %>
                                                </div>
                                            </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">$<%= item.price.toFixed(2) %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= item.quantity %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">$<%= (item.price *
                                    item.quantity).toFixed(2) %>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="px-6 py-4 text-center text-gray-500">No items found in this
                                        order.</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

    <!-- History Log -->
    <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-800">Order History</h2>
        </div>
        <div class="p-6">
            <div class="relative border-l-2 border-gray-200 ml-3 space-y-8">
                <% if (order.history && order.history.length> 0) { %>
                    <% order.history.slice().reverse().forEach((entry, index)=> { %>
                        <div class="relative flex items-start group">
                            <div class="ml-6 w-full">
                                <div class="flex items-center justify-between mb-1">
                                    <h3 class="text-md font-bold text-gray-900 capitalize">
                                        <%= entry.status %>
                                    </h3>
                                    <time class="text-sm text-gray-500">
                                        <%= new Date(entry.updatedAt).toLocaleString() %>
                                    </time>
                                </div>
                                <p class="text-gray-600 text-sm bg-gray-50 p-3 rounded-md border border-gray-100">
                                    <%= entry.note || 'No additional notes' %>
                                </p>
                            </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <p class="ml-6 text-gray-500 italic">No history available.</p>
                                <% } %>
            </div>
        </div>
    </div>

    <%- include('../../../../src/views/partials/footer') %>