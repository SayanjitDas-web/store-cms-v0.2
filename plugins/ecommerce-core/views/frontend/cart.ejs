<%- include('../../../../src/views/partials/header_frontend') %>

    <div class="container mx-auto px-6 py-8">
        <% if (locals.error) { %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded shadow-sm" role="alert">
                <p class="font-bold">Error</p>
                <p>
                    <%= error %>
                </p>
            </div>
            <% } %>
                <% if (locals.success) { %>
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded shadow-sm"
                        role="alert">
                        <p class="font-bold">Success</p>
                        <p>
                            <%= success %>
                        </p>
                    </div>
                    <% } %>

                        <h1 class="text-3xl font-bold text-gray-800 mb-6">Shopping Cart</h1>

                        <% if(cart.items.length> 0) { %>
                            <div class="bg-white rounded-lg shadow overflow-hidden">
                                <div class="overflow-x-auto">
                                    <table class="min-w-full divide-y divide-gray-200">
                                        <thead class="bg-gray-50">
                                            <tr>
                                                <th scope="col"
                                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Product</th>
                                                <th scope="col"
                                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Price</th>
                                                <th scope="col"
                                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Quantity</th>
                                                <th scope="col"
                                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Total</th>
                                                <th scope="col"
                                                    class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody class="bg-white divide-y divide-gray-200">
                                            <% cart.items.forEach(item=> { %>
                                                <tr>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <div class="flex items-center">
                                                            <% if(item.image) { %>
                                                                <div class="flex-shrink-0 h-10 w-10">
                                                                    <img class="h-10 w-10 rounded-full object-cover"
                                                                        src="<%= item.image %>" alt="<%= item.name %>">
                                                                </div>
                                                                <% } %>
                                                                    <div class="ml-4">
                                                                        <div class="text-sm font-medium text-gray-900">
                                                                            <%= item.name %>
                                                                        </div>
                                                                    </div>
                                                        </div>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                        $<%= item.price.toFixed(2) %>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                        <form action="/cart/update" method="POST"
                                                            class="flex items-center">
                                                            <input type="hidden" name="productId"
                                                                value="<%= item.productId %>">
                                                            <input type="number" name="quantity"
                                                                value="<%= item.quantity %>" min="1"
                                                                class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-16 sm:text-sm border-gray-300 rounded-md mr-2 text-center"
                                                                style="border: 1px solid #d1d5db;">
                                                            <button type="submit"
                                                                class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">Update</button>
                                                        </form>
                                                    </td>
                                                    <td
                                                        class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
                                                        $<%= (item.price * item.quantity).toFixed(2) %>
                                                    </td>
                                                    <td
                                                        class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                        <form action="/cart/remove" method="POST">
                                                            <input type="hidden" name="productId"
                                                                value="<%= item.productId %>">
                                                            <button type="submit"
                                                                class="text-red-600 hover:text-red-900"><i
                                                                    class="bi bi-trash"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                        <tfoot class="bg-gray-50">
                                            <tr>
                                                <td colspan="3"
                                                    class="px-6 py-4 text-right text-lg font-bold text-gray-700">Total:
                                                </td>
                                                <td class="px-6 py-4 text-left text-lg font-bold text-indigo-700">$<%=
                                                        cart.total.toFixed(2) %>
                                                </td>
                                                <td></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                            <div class="flex justify-between items-center mt-6">
                                <a href="/shop" class="text-indigo-600 hover:text-indigo-900 font-medium">Continue
                                    Shopping</a>
                                <a href="/checkout"
                                    class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg shadow transition duration-200">Proceed
                                    to Checkout</a>
                            </div>
                            <% } else { %>
                                <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 rounded"
                                    role="alert">
                                    <p>Your cart is empty. <a href="/shop" class="font-bold underline">Go shopping!</a>
                                    </p>
                                </div>
                                <% } %>
    </div>

    <%- include('../../../../src/views/partials/footer_frontend') %>