<%- include('../../../../src/views/partials/header_frontend') %>

    <div class="container mx-auto px-6 py-16 text-center">
        <div class="mb-6">
            <i class="bi bi-check-circle-fill text-green-500 text-6xl"></i>
        </div>
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Thank You for Your Order!</h1>
        <p class="text-gray-600 text-lg mb-8">Your order <strong>#<%= order._id %></strong> has been placed
            successfully.</p>

        <div class="bg-white rounded-lg shadow-md mx-auto text-left max-w-2xl overflow-hidden">
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-700">Order Details</h2>
            </div>
            <div class="p-6">
                <div class="mb-4">
                    <p class="mb-2"><strong class="text-gray-700">Status:</strong> <span
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 uppercase tracking-wide">
                            <%= order.status %>
                        </span></p>
                    <p class="text-xl"><strong class="text-gray-700">Total:</strong> <span
                            class="font-bold text-indigo-600">$<%= order.totalAmount.toFixed(2) %></span></p>
                </div>

                <hr class="border-gray-200 my-4">

                <h6 class="font-semibold text-gray-700 mb-3">Items:</h6>
                <ul class="space-y-2">
                    <% order.items.forEach(item=> { %>
                        <li
                            class="flex justify-between text-sm text-gray-600 border-b border-gray-100 pb-2 last:border-0 last:pb-0">
                            <span>
                                <%= item.name %> <span class="text-gray-400">x <%= item.quantity %></span>
                            </span>
                        </li>
                        <% }); %>
                </ul>
            </div>
        </div>

        <div class="mt-10">
            <a href="/shop"
                class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg shadow transition duration-200 inline-block">Continue
                Shopping</a>
        </div>
    </div>

    <%- include('../../../../src/views/partials/footer_frontend') %>