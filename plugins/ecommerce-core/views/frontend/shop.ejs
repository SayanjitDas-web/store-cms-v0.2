<%- include('../../../../src/views/partials/header_frontend') %>

    <div class="container mx-auto px-6 py-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Shop</h1>

        <% if (products.length> 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% products.forEach(product=> { %>
                    <div
                        class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-200 border border-gray-100">
                        <a href="/shop/product/<%= product._id %>">
                            <div class="h-48 overflow-hidden bg-gray-100 flex items-center justify-center">
                                <% if(product.image) { %>
                                    <img src="<%= product.image %>" alt="<%= product.name %>"
                                        class="w-full h-full object-cover">
                                    <% } else { %>
                                        <i class="bi bi-image text-4xl text-gray-300"></i>
                                        <% } %>
                            </div>
                        </a>
                        <div class="p-4">
                            <h3 class="font-semibold text-lg mb-1 text-gray-800 truncate">
                                <a href="/shop/product/<%= product._id %>" class="hover:text-indigo-600">
                                    <%= product.name %>
                                </a>
                            </h3>
                            <p class="text-indigo-600 font-bold mb-2">$<%= product.price.toFixed(2) %>
                            </p>
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%- product.description ?
                                    product.description.replace(/<[^>]*>/g, '').substring(0, 100) : '' %>...</p>

                            <form action="/cart/add" method="POST">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <input type="hidden" name="quantity" value="1">
                                <button type="submit"
                                    class="block w-full text-center bg-gray-900 text-white py-2 rounded-md hover:bg-gray-800 transition-colors">
                                    Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                    <% }); %>
            </div>
            <% } else { %>
                <div class="bg-white rounded-lg shadow-sm p-12 text-center">
                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
                        <i class="bi bi-box-seam text-2xl text-gray-400"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">No products found</h3>
                    <p class="text-gray-500 mt-2">Check back later for new inventory.</p>
                </div>
                <% } %>
    </div>

    <%- include('../../../../src/views/partials/footer_frontend') %>